<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/baseline_tint1"
	android:paddingTop="24dp">


	<ImageView
		android:id="@+id/settings_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_margin="16dp"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:focusable="true"
		android:src="@drawable/nav_header_ic_settings_white_24dp"
		tools:ignore="ContentDescription"/>

	<ImageView
		android:id="@+id/signed_in_user_image_view"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:layout_alignParentStart="true"
		android:layout_margin="16dp"
		android:src="@color/material_gray_700"
		tools:ignore="ContentDescription"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/signed_in_user_image_view"
		android:layout_margin="16dp"
		android:orientation="horizontal"
		tools:ignore="UseCompoundDrawables">

		<TextView
			android:id="@+id/signed_in_username_tv"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/default_name"
			style="@style/regular_text_white_20sp_85op"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:src="@drawable/nav_header_ic_arrow_down_white_24dp"
			tools:ignore="ContentDescription" />


	</LinearLayout>

</RelativeLayout>
