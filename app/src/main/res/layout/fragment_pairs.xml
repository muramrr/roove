<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="viewModel"
			type="com.mmdev.roove.ui.pairs.PairsViewModel" />

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/containerPairs"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimaryDark"
		>

		<androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPairList"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:clipToPadding="false"
			android:overScrollMode="never"

			app:visibilityInvisible="@{!viewModel.showTextHelper}"

			app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
			app:spanCount="2"

			app:paddingTopSystemWindowInsets="@{true}"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"

			tools:listitem="@layout/fragment_pairs_item"
			/>

		<TextView android:id="@+id/tvPairsHelperText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"

			android:text="@string/fragment_pairs_explanation_text"
			android:textAppearance="?textAppearanceHeadline5"
			
			app:visibilityInvisible="@{viewModel.showTextHelper}"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>