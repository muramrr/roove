<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/card_margin_fix_rview_8"
	android:layout_marginBottom="@dimen/card_margin_fix_rview_8"
	app:cardBackgroundColor="@color/baseline_tint1"
	app:cardCornerRadius="6dp"
	app:cardElevation="1dp"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/general_margin_16"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/feed_publisher_image_view"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:layout_gravity="center"
				android:src="@drawable/default_avatar"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="8dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/feed_publisher_name_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Name Surname"
					style="@style/regular_text_white_12sp_85op"/>

				<TextView
					android:id="@+id/feed_publish_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2 hours ago"
					style="@style/regular_text_white_8sp_25op"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/feed_content_image_view"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:background="?attr/selectableItemBackground"
				android:clickable="true"
				android:focusable="true"
				android:maxHeight="250dp"
				android:scaleType="centerCrop"
				android:src="@drawable/feed_content_driving_a_car"
				tools:ignore="ContentDescription" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/feed_content_description"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="some text"
					style="@style/light_text_white_10sp_85op"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</androidx.cardview.widget.CardView>
