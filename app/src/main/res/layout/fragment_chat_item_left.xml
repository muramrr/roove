<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorPrimaryDark"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	android:layout_marginEnd="48dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
		android:id="@+id/item_message_ivUserPic"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_alignBottom="@+id/contentMessageChat"
		android:layout_alignParentStart="true"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:contentDescription="@string/chat_message_sender_avatar_img_description"
		android:src="@drawable/default_avatar"/>

	<LinearLayout
		android:id="@+id/contentMessageChat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/item_message_ivUserPic"
		android:background="@drawable/fragment_chat_message_left"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/img_chat"
			android:layout_width="200dp"
			android:layout_height="250dp"
			android:layout_margin="10dp"
			android:background="@color/colorAccentDark"
			android:contentDescription="@string/chat_message_sender_attach_img_description"
			android:src="@drawable/default_avatar"
			android:visibility="visible"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/item_message_tvMessage"
			android:layout_margin="10dp"
			android:text="@string/default_message_text"
			android:textIsSelectable="true"
			android:textSize="16sp"
			style="@style/regular_text_white85op"/>

	</LinearLayout>

	<TextView
		android:id="@+id/item_message_tvTimestamp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/contentMessageChat"
		android:layout_toEndOf="@id/item_message_ivUserPic"
		android:layout_marginTop="2dp"

		android:text="@string/default_message_date"
		android:textColor="@color/white_25"
		android:textSize="12sp"
		style="@style/regular_text_white85op" />


</RelativeLayout>