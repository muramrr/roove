<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
		android:id="@+id/item_message_ivUserPic"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_alignBottom="@+id/contentMessageChat"
		android:layout_alignParentStart="true"
		android:layout_margin="5dp"
		android:contentDescription="@string/chat_message_sender_avatar_img_description"
		android:src="@drawable/fragment_chat_message_default_account_icon"/>

	<LinearLayout
		android:id="@+id/contentMessageChat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/item_message_ivUserPic"
		android:background="@drawable/fragment_chat_message_left"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/img_chat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@color/colorAccent"
			android:contentDescription="@string/chat_message_sender_attach_img_description"
			android:minHeight="100dp"
			android:minWidth="100dp"
			android:src="@color/material_black_1000"
			android:visibility="visible"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/item_message_tvMessage"
			android:padding="10dp"
			android:text="@string/default_message_text"
			android:textColor="@color/material_white_1000"
			android:textIsSelectable="true" />

	</LinearLayout>

	<TextView
		android:id="@+id/item_message_tvTimestamp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/contentMessageChat"
		android:layout_toEndOf="@id/item_message_ivUserPic"
		android:layout_marginStart="10dp"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:paddingTop="3dp"
		android:text="@string/default_message_date"
		android:textSize="12sp" />


</RelativeLayout>