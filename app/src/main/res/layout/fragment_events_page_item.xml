<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.main.view.MainActivity">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/content_main_rv_feed"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorPrimaryDark"
		android:layout_marginStart="@dimen/card_margin_fix_rview_8"
		android:layout_marginEnd="@dimen/general_margin_16"
		android:layout_marginBottom="@dimen/card_margin_fix_rview_8"
		android:overScrollMode="never"
		app:layoutManager="GridLayoutManager"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:spanCount="2"
		tools:listitem="@layout/fragment_events_rv_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
