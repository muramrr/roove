<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight">

		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorError">@color/colorError</item>
		<item name="colorOnSurface">@color/colorSurface</item>


		<item name="actionModeBackground">@color/actionModeBackground</item>
		<item name="android:colorBackground">@color/colorPrimaryDark</item>



	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="AlertDialogAnimation">
		<item name="android:windowEnterAnimation">@anim/alert_enter</item>
		<item name="android:windowExitAnimation">@anim/alert_exit</item>
	</style>

	<style name="AppTheme.NavigationView" >
		<item name="android:textAppearance">@style/regular_text_white_16sp_85op</item>
	</style>



	<!-- auth tv 1 -->
	<style name="auth_slogan1" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white</item>
		<item name="android:fontFamily">@font/nunito_sans_bold</item>
		<item name="android:textSize">@dimen/auth_tv_slogan1</item>
	</style>

	<!-- auth tv 2 -->
	<style name="auth_slogan2" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white</item>
		<item name="android:fontFamily">@font/nunito_sans_bold</item>
		<item name="android:textSize">@dimen/auth_tv_slogan2</item>
	</style>



	<!-- tabs text -->
	<style name="tab_text_36sp" parent="TextAppearance.Design.Tab">
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="textAllCaps">false</item>
		<item name="android:textColor">@color/white_10</item>
		<item name="android:textSize">36sp</item>
	</style>



	<!-- header 2 -->
	<style name="regular_text_white_24sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">24sp</item>
	</style>

	<!-- header 3 -->
	<style name="regular_text_white_20sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">20sp</item>
	</style>



	<!-- basic tv -->
	<style name="regular_text_white_16sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">16sp</item>
	</style>

	<!-- feed content text-->
	<style name="light_text_white_12sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_light</item>
		<item name="android:textSize">12sp</item>
	</style>

	<!-- feed content author name -->
	<style name="regular_text_white_12sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">12sp</item>
	</style>


	<!-- chat timestamp textview	-->
	<style name="regular_text_white_8sp_25op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_25</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">12sp</item>
	</style>


	<style name="regular_text_white_14sp_85op" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/white_85</item>
		<item name="android:fontFamily">@font/nunito_sans_regular</item>
		<item name="android:textSize">16sp</item>
	</style>




</resources>